Today I implemented a full custom singly linked list from scratch in C++.

ðŸ”· 707. Design Linked List
class MyLinkedList {
public:
    ListNode* head;
    MyLinkedList() { head = nullptr; }

    int get(int index) {
        ListNode* temp = head;
        while (temp && index--) {
            temp = temp->next;
        }
        return temp ? temp->val : -1;
    }

    void addAtHead(int val) {
        ListNode* temp = new ListNode(val);
        temp->next = head;
        head = temp;
    }

    void addAtTail(int val) {
        ListNode* newNode = new ListNode(val);
        if (!head) {
            head = newNode;
            return;
        }
        ListNode* temp = head;
        while (temp->next) {
            temp = temp->next;
        }
        temp->next = newNode;
    }

    void addAtIndex(int index, int val) {
        if (index == 0) {
            addAtHead(val);
            return;
        }
        ListNode* temp = head;
        while (temp && --index > 0) {
            temp = temp->next;
        }
        if (!temp) return;
        ListNode* newNode = new ListNode(val);
        newNode->next = temp->next;
        temp->next = newNode;
    }

    void deleteAtIndex(int index) {
        if (!head) return;
        if (index == 0) {
            ListNode* toDelete = head;
            head = head->next;
            delete toDelete;
            return;
        }
        ListNode* temp = head;
        while (temp && --index > 0) {
            temp = temp->next;
        }
        if (!temp || !temp->next) return;
        ListNode* toDelete = temp->next;
        temp->next = temp->next->next;
        delete toDelete;
    }
};
